{
  "name": "hotel-inventory-management",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:client": "turbo build --filter=@hotel-inventory/client",
    "build:server": "turbo build --filter=@hotel-inventory/server",
    "build:shared": "turbo build --filter=@hotel-inventory/shared",
    "start:server": "yarn workspace @hotel-inventory/server start",
    "start:client": "yarn workspace @hotel-inventory/client start",
    "lint": "turbo lint",
    "lint:client": "turbo lint --filter=@hotel-inventory/client",
    "lint:server": "turbo lint --filter=@hotel-inventory/server",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "clean:all": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.5.8",
    "typescript": "^5.1.6",
    "vite": "^5.4.19"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}