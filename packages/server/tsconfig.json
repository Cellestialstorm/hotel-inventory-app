{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
