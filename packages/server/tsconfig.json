{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],

      "@hotel-inventory/shared": ["../shared/src/index.ts"],
      "@hotel-inventory/shared/*": ["../shared/src/*"]
    }
  },

  "references": [
    { "path": "../shared" }
  ],

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
