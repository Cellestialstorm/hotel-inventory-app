{
  /* Add extends */
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* These module settings are best for Vite */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* These are inherited but good to be explicit */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Use 'baseUrl' and 'paths' from base config */
    /* Remove redundant 'baseUrl' and 'paths' for shared */
    "baseUrl": ".",
    "paths": {
      /* Client-specific alias */
      "@/*": ["./src/*"]
      /* The @hotel-inventory/shared path is now inherited */
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"],

  /* This is critical for build order */
  "references": [
    { "path": "../shared" }
  ]
}